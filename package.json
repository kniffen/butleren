{
  "name": "butleren",
  "private": true,
  "description": "Yet another Discord bot",
  "version": "1.0.2",
  "license": "MIT",
  "author": "Kniffen <kniffen@knifftech.org> (https://knifftech.org/)",
  "homepage": "https://github.com/kniffen/butleren#readme",
  "bugs": {
    "url": "https://github.com/kniffen/butleren/issues"
  },
  "main": "main.ts",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "update:submodules": "git submodule update --remote",
    "build:frontend": "cd frontend && npm install --ignore-scripts && npm run build",
    "start": "tsx --env-file=./.env -r dotenv/config src/main.ts",
    "dev": "tsx --env-file=./.env -r dotenv/config --watch src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "code-quality": "npm run typecheck && npm run lint && npm run test",
    "postinstall": "node -e \"if (process.env.CI !== 'true') require('child_process').execSync('npm run build:frontend', {stdio: 'inherit'})\""
  },
  "dependencies": {
    "@kniffen/butleren-api-specification": "git+https://github.com/kniffen/butleren-api-specification.git",
    "body-parser": "^2.2.2",
    "date-fns": "^4.1.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "node-fetch": "^2.7.0",
    "pureimage": "^0.4.18",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tsx": "^4.21.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.8",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.12.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.55.0"
  }
}