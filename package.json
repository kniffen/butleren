{
  "name": "butleren",
  "version": "1.3.1-beta",
  "private": true,
  "type": "module",
  "description": "Yet another Discord bot",
  "main": "index.js",
  "engines": {
    "node": ">=16.10.0"
  },
  "volta": {
    "node": "16.10.0"
  },
  "jest": {
    "coverageProvider": "v8",
    "collectCoverage": true,
    "verbose": true,
    "forceExit": true,
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "scripts": {
    "start": "node -r dotenv/config ./index.js",
    "dev": "NODE_ENV=development node -r dotenv/config ./index.js",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint": "npx eslint . --config .eslintrc.cjs --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kniffen/butleren.git"
  },
  "keywords": [],
  "author": "Kniffen <kniffen@knifftech.org> (https://knifftech.org/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kniffen/butleren/issues"
  },
  "homepage": "https://github.com/kniffen/butleren#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cleverbot-node": "^0.3.11",
    "discord.js": "^14.9.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "moment-timezone": "^0.5.43",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "babel-jest": "^28.1.3",
    "eslint": "^8.38.0",
    "jest": "^28.1.3",
    "regenerator-runtime": "^0.13.11",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "http-proxy-middleware": "^2.0.6",
    "win-node-env": "^0.6.1"
  }
}
