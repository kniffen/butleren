{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "target": "ES2015",
    "moduleResolution": "Node"
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/**/*.spec.ts",
    "src/**/*.spec.js"
  ]
}